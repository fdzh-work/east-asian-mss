                            <title type="desc" xml:lang="en">A scroll featuring calligraphy attributed to Huang Ting Jian</title>
                            <author key="Q709460">   
                                <persName>黃庭堅</persName>
                                <persName type="字">鲁直</persName>
                                <persName type="號">山谷道人</persName>
                                <persName type="號">豫章先生</persName>
                                <persName type="號">涪翁</persName>
